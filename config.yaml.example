server:
  port: 8080
  host: "0.0.0.0"
  base_host: "localhost:8080"  # For production use your domain, e.g., "monitoring.example.com"
  frontend:
    # URLs for frontend API and WebSocket connections
    # If not specified, will be auto-generated based on base_host
    # For localhost: http://localhost:8080/api/v1 and ws://localhost:8080/ws
    # For production: https://your-domain.com/api/v1 and wss://your-domain.com/ws
    base_url: ""     # Optional: Override API base URL (e.g., "https://api.example.com/api/v1")
    socket_url: ""   # Optional: Override WebSocket URL (e.g., "wss://api.example.com/ws")
  auth:
    enabled: false  # Set to true to enable basic authentication
    users:
      - username: "admin"
        password: "changeme"

monitoring:
  global:
    default_interval: 30s
    default_timeout: 10s
    default_retries: 3

timezone: UTC

database:
  path: "./data/db.sqlite"

notifications:
  enabled: true
  urls:
    # Telegram
    - "telegram://token@telegram?chats=@channel-1[,chat-id-1,...]&preview=false"
    # Discord
    - "discord://token@id"
    # Slack
    - "slack://[botname@]token-a/token-b/token-c"
    # Email
    - "smtp://username:password@host:port/?from=fromAddress&to=recipient1[,recipient2,...]" 
